{
    "compilerOptions": {
      "module": "commonjs",
      "noImplicitAny": true,
      "target": "es6",
      "removeComments": true,
      "preserveConstEnums": true,
      "jsx": "react",
      "sourceMap": false,
      "outDir": "built",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true
    },
    "awesomeTypescriptLoaderOptions": {
      "useWebpackText": true,
      "forkChecker": true,
      "useCache": true
    },
    "exclude": [
      "node_modules",
      "built"
    ]
  }